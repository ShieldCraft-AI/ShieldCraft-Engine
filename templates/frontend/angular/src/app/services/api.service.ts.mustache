export class ApiService {
  private baseURL = 'http://localhost:8000/api'; // Change this to your backend URL

  constructor(private http: HttpClient) {}

  // Generic CRUD methods
  private get<T>(endpoint: string, params?: any): Observable<ApiResponse<T>> {
    let httpParams = new HttpParams();
    if (params) {
      Object.keys(params).forEach(key => {
        if (params[key] !== null && params[key] !== undefined) {
          httpParams = httpParams.set(key, params[key]);
        }
      });
    }
    return this.http.get<ApiResponse<T>>(`${this.baseURL}${endpoint}`, { params: httpParams });
  }

  private post<T>(endpoint: string, data: any): Observable<ApiResponse<T>> {
    return this.http.post<ApiResponse<T>>(`${this.baseURL}${endpoint}`, data);
  }

  private put<T>(endpoint: string, data: any): Observable<ApiResponse<T>> {
    return this.http.put<ApiResponse<T>>(`${this.baseURL}${endpoint}`, data);
  }

  private delete<T>(endpoint: string): Observable<ApiResponse<T>> {
    return this.http.delete<ApiResponse<T>>(`${this.baseURL}${endpoint}`);
  }

  // Entity-specific methods
