<template>
  <div class="entity-list">
    <div class="header">
      <h1 class="text-3xl font-bold text-gray-900">{{ entityName }}s</h1>
      <RouterLink
        :to="'/{{entityNameLower}}s/create'"
        class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition-colors"
      >
        Add New {{ entityName }}
      </RouterLink>
    </div>

    <div v-if="loading" class="loading">
      Loading {{ entityName }}s...
    </div>

    <div v-else-if="error" class="error">
      Error: {{ error }}
    </div>

    <div v-else-if="items.length === 0" class="empty">
      No {{ entityName }}s found.
    </div>

    <div v-else class="grid gap-4">
      <div
        v-for="item in items"
        :key="item.id"
        class="entity-card"
      >
        <div class="card-header">
          <h3 class="card-title">{{ getItemTitle(item) }}</h3>
        </div>

        <div class="card-content">
          <div v-for="field in fields" :key="field.name" class="field">
            <span class="field-label">{{ field.label }}:</span>
            <span class="field-value">
              <span v-if="field.type === 'boolean'">
                {{ item[field.name] ? 'Yes' : 'No' }}
              </span>
              <span v-else-if="field.type === 'array'">
                {{ Array.isArray(item[field.name]) ? item[field.name].length : 0 }} items
              </span>
              <span v-else-if="field.type === 'object'">
                Object
              </span>
              <span v-else>
                {{ item[field.name] || 'N/A' }}
              </span>
            </span>
          </div>
        </div>

        <div class="card-actions">
          <RouterLink
            :to="'/{{entityNameLower}}s/' + item.id"
            class="btn btn-view"
          >
            View
          </RouterLink>
          <RouterLink
            :to="'/{{entityNameLower}}s/' + item.id + '/edit'"
            class="btn btn-edit"
          >
            Edit
          </RouterLink>
          <button
            @click="handleDelete(item.id)"
            class="btn btn-delete"
          >
            Delete
          </button>
        </div>
      </div>
    </div>
  </div>
</template>

<script setup lang="ts">
import { computed } from 'vue'
import { RouterLink } from 'vue-router'

interface ListField {
  name: string
  label: string
  type: string
}

interface Props {
  entityName: string
  fields: ListField[]
  items: any[]
  loading?: boolean
  error?: string | null
}

const props = withDefaults(defineProps<Props>(), {
  loading: false,
  error: null
})

const emit = defineEmits<{
  delete: [id: number]
}>()

const entityNameLower = computed(() => props.entityName.toLowerCase())

function getItemTitle(item: any): string {
  // Try common title fields
  return item.title || item.name || item.username || `${props.entityName} #${item.id}`
}

function handleDelete(id: number) {
  if (confirm(`Are you sure you want to delete this ${props.entityName.toLowerCase()}?`)) {
    emit('delete', id)
  }
}
</script>

