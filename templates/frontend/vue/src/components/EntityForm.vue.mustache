<template>
  <div class="entity-form">
    <div class="header">
      <h1 class="text-3xl font-bold text-gray-900">
        {{ isEditing ? 'Edit' : 'Create' }} {{ entityName }}
      </h1>
      <RouterLink
        to="/"
        class="text-blue-600 hover:text-blue-800"
      >
        ‚Üê Back to Home
      </RouterLink>
    </div>

    <form @submit.prevent="handleSubmit" class="form">
      <div v-for="field in fields" :key="field.name" class="form-group">
        <label :for="field.name" class="form-label">
          {{ field.label }}
          <span v-if="field.required" class="required">*</span>
        </label>

        <input
          v-if="field.type === 'text' || field.type === 'string'"
          :id="field.name"
          v-model="formData[field.name]"
          :type="field.formType"
          :required="field.required"
          :placeholder="field.placeholder"
          class="form-input"
        />

        <input
          v-else-if="field.type === 'number' || field.type === 'integer'"
          :id="field.name"
          v-model.number="formData[field.name]"
          type="number"
          :required="field.required"
          :placeholder="field.placeholder"
          class="form-input"
        />

        <input
          v-else-if="field.type === 'date'"
          :id="field.name"
          v-model="formData[field.name]"
          type="date"
          :required="field.required"
          class="form-input"
        />

        <textarea
          v-else-if="field.type === 'array' || field.type === 'object'"
          :id="field.name"
          v-model="formData[field.name]"
          :required="field.required"
          :placeholder="field.placeholder"
          class="form-textarea"
          rows="4"
        ></textarea>

        <div v-else-if="field.type === 'boolean'" class="form-checkbox">
          <input
            :id="field.name"
            v-model="formData[field.name]"
            type="checkbox"
            class="form-checkbox-input"
          />
          <label :for="field.name" class="form-checkbox-label">
            {{ field.label }}
          </label>
        </div>
      </div>

      <div class="form-actions">
        <button
          type="button"
          @click="$router.back()"
          class="btn btn-secondary"
        >
          Cancel
        </button>
        <button
          type="submit"
          :disabled="loading"
          class="btn btn-primary"
        >
          {{ loading ? 'Saving...' : (isEditing ? 'Update' : 'Create') }}
        </button>
      </div>
    </form>
  </div>
</template>

<script setup lang="ts">
import { ref, onMounted } from 'vue'
import { useRouter } from 'vue-router'

interface FormField {
  name: string
  label: string
  type: string
  formType: string
  required?: boolean
  placeholder?: string
}

interface Props {
  entityName: string
  fields: FormField[]
  initialData?: Record<string, any>
  loading?: boolean
}

const props = withDefaults(defineProps<Props>(), {
  initialData: () => ({}),
  loading: false
})

const emit = defineEmits<{
  submit: [data: Record<string, any>]
}>()

const router = useRouter()
const formData = ref<Record<string, any>>({ ...props.initialData })

const isEditing = computed(() => Object.keys(props.initialData || {}).length > 0)

function handleSubmit() {
  emit('submit', formData.value)
}
</script>

