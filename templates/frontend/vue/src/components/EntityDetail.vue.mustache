<template>
  <div class="entity-detail">
    <div class="header">
      <h1 class="text-3xl font-bold text-gray-900">{{ entityName }} Details</h1>
      <div class="actions">
        <RouterLink
          :to="`/entities/${entityName.toLowerCase()}/edit/${item.id}`"
          class="btn btn-secondary"
        >
          Edit
        </RouterLink>
        <RouterLink
          to="/"
          class="text-blue-600 hover:text-blue-800"
        >
          ‚Üê Back to Home
        </RouterLink>
      </div>
    </div>

    <div v-if="loading" class="loading">
      Loading {{ entityName }} details...
    </div>

    <div v-else-if="error" class="error">
      Error loading {{ entityName }}: {{ error }}
    </div>

    <div v-else-if="item" class="detail-content">
      <div class="detail-card">
        <div v-for="field in fields" :key="field.name" class="detail-field">
          <div class="field-label">{{ field.label }}</div>
          <div class="field-value">
            <span v-if="field.type === 'boolean'">
              {{ item[field.name] ? 'Yes' : 'No' }}
            </span>
            <span v-else-if="field.type === 'array'">
              <ul v-if="Array.isArray(item[field.name])" class="array-list">
                <li v-for="(value, index) in item[field.name]" :key="index">
                  {{ value }}
                </li>
              </ul>
              <pre v-else class="json-value">{{ JSON.stringify(item[field.name], null, 2) }}</pre>
            </span>
            <span v-else-if="field.type === 'object'">
              <pre class="json-value">{{ JSON.stringify(item[field.name], null, 2) }}</pre>
            </span>
            <span v-else>
              {{ item[field.name] || 'N/A' }}
            </span>
          </div>
        </div>
      </div>

      <div class="detail-actions">
        <button
          @click="handleDelete"
          :disabled="deleting"
          class="btn btn-danger"
        >
          {{ deleting ? 'Deleting...' : 'Delete' }}
        </button>
      </div>
    </div>

    <div v-else class="not-found">
      {{ entityName }} not found.
    </div>
  </div>
</template>

<script setup lang="ts">
import { ref, onMounted } from 'vue'
import { useRouter, useRoute } from 'vue-router'

interface DetailField {
  name: string
  label: string
  type: string
}

interface Props {
  entityName: string
  fields: DetailField[]
  item?: Record<string, any>
  loading?: boolean
  error?: string
}

const props = withDefaults(defineProps<Props>(), {
  item: undefined,
  loading: false,
  error: ''
})

const emit = defineEmits<{
  delete: [id: string | number]
}>()

const router = useRouter()
const route = useRoute()
const deleting = ref(false)

function handleDelete() {
  if (confirm(`Are you sure you want to delete this ${props.entityName}?`)) {
    deleting.value = true
    emit('delete', route.params.id as string)
  }
}
</script>

