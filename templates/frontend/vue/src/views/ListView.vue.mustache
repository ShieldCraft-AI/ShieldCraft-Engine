<template>
  <div class="list-view">
    <div class="header">
      <h1 class="text-3xl font-bold text-gray-900">{{ entityName }} List</h1>
      <RouterLink
        :to="`/${entityName.toLowerCase()}s/create`"
        class="btn btn-primary"
      >
        Create New {{ entityName }}
      </RouterLink>
    </div>

    <div v-if="loading" class="loading">
      Loading {{ entityName }}...
    </div>

    <div v-else-if="error" class="error">
      Error loading {{ entityName }}: {{ error }}
    </div>

    <div v-else>
      <EntityList
        :entity-name="entityName"
        :items="items"
        :fields="fields"
        @edit="handleEdit"
        @delete="handleDelete"
      />
    </div>
  </div>
</template>

<script setup lang="ts">
import { ref, onMounted } from 'vue'
import { useRouter } from 'vue-router'
import EntityList from '@/components/EntityList.vue'

interface ListField {
  name: string
  label: string
  type: string
}

interface Props {
  entityName: string
  fields: ListField[]
  items?: any[]
  loading?: boolean
  error?: string
}

const props = withDefaults(defineProps<Props>(), {
  items: () => [],
  loading: false,
  error: ''
})

const emit = defineEmits<{
  loadItems: []
  edit: [id: string | number]
  delete: [id: string | number]
}>()

const router = useRouter()

function handleEdit(id: string | number) {
  router.push(`/${props.entityName.toLowerCase()}s/${id}/edit`)
}

function handleDelete(id: string | number) {
  emit('delete', id)
}

onMounted(() => {
  emit('loadItems')
})
</script>

