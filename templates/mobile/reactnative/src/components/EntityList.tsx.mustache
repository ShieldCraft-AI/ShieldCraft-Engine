import React, {useState, useEffect} from 'react';
import {
  View,
  Text,
  StyleSheet,
  FlatList,
  TouchableOpacity,
  RefreshControl,
  Alert,
} from 'react-native';
import {useNavigation} from '@react-navigation/native';
import {StackNavigationProp} from '@react-navigation/stack';
import {RootStackParamList} from '../navigation/AppNavigator';
import apiService from '../services/api';
import {PaginatedResponse} from '../models/types';

interface EntityListProps<EntityType> {
  entityName: string;
  navigationKey: keyof RootStackParamList;
  renderItem: (item: EntityType) => React.ReactElement;
  getItems: () => Promise<{data?: PaginatedResponse<EntityType>}>;
  onDelete?: (id: number) => Promise<void>;
}

function EntityList<EntityType extends {id: number}>(
  props: EntityListProps<EntityType>
) {
  const {entityName, navigationKey, renderItem, getItems, onDelete} = props;
  const navigation = useNavigation<StackNavigationProp<RootStackParamList>>();
  const [items, setItems] = useState<EntityType[]>([]);
  const [loading, setLoading] = useState(true);
  const [refreshing, setRefreshing] = useState(false);

  const loadItems = async () => {
    try {
      const response = await getItems();
      if (response.data) {
        setItems(response.data.items);
      }
    } catch (error) {
      console.error(`Error loading ${entityName}:`, error);
      Alert.alert('Error', `Failed to load ${entityName}`);
    } finally {
      setLoading(false);
      setRefreshing(false);
    }
  };

  useEffect(() => {
    loadItems();
  }, []);

  const handleRefresh = () => {
    setRefreshing(true);
    loadItems();
  };

  const handleAdd = () => {
    navigation.navigate(navigationKey as any, {});
  };

  const handleEdit = (id: number) => {
    navigation.navigate(navigationKey as any, {id});
  };

  const handleDelete = (id: number) => {
    Alert.alert(
      'Delete Confirmation',
      `Are you sure you want to delete this ${entityName.toLowerCase()}?`,
      [
        {text: 'Cancel', style: 'cancel'},
        {
          text: 'Delete',
          style: 'destructive',
          onPress: async () => {
            try {
              if (onDelete) {
                await onDelete(id);
              }
              setItems(prevItems => prevItems.filter(item => item.id !== id));
            } catch (error) {
              console.error(`Error deleting ${entityName}:`, error);
              Alert.alert('Error', `Failed to delete ${entityName}`);
            }
          },
        },
      ]
    );
  };

  const renderListItem = ({item}: {item: EntityType}) => (
    <View style={styles.itemContainer}>
      {renderItem(item)}
      <View style={styles.actionsContainer}>
        <TouchableOpacity
          style={[styles.actionButton, styles.editButton]}
          onPress={() => handleEdit(item.id)}>
          <Text style={styles.editButtonText}>Edit</Text>
        </TouchableOpacity>
        <TouchableOpacity
          style={[styles.actionButton, styles.deleteButton]}
          onPress={() => handleDelete(item.id)}>
          <Text style={styles.deleteButtonText}>Delete</Text>
        </TouchableOpacity>
      </View>
    </View>
  );

  if (loading) {
    return (
      <View style={styles.centerContainer}>
        <Text>Loading...</Text>
      </View>
    );
  }

  return (
    <View style={styles.container}>
      <FlatList
        data={items}
        renderItem={renderListItem}
        keyExtractor={(item) => item.id.toString()}
        refreshControl={
          <RefreshControl refreshing={refreshing} onRefresh={handleRefresh} />
        }
        ListEmptyComponent={
          <View style={styles.emptyContainer}>
            <Text style={styles.emptyText}>No {entityName.toLowerCase()}s found</Text>
          </View>
        }
      />
      <TouchableOpacity style={styles.addButton} onPress={handleAdd}>
        <Text style={styles.addButtonText}>+ Add {entityName}</Text>
      </TouchableOpacity>
    </View>
  );
}

