{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Checklist Draft",
  "type": "object",
  "required": ["items"],
  "properties": {
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "ptr", "text"],
        "properties": {
          "id": {"type": "string"},
          "ptr": {"type": "string"},
          "text": {"type": "string"},
          "value": {"type": ["string", "number", "object", "array", "boolean", "null"]},
          "confidence": {"type": "string", "enum": ["low", "medium", "high"]},
          "evidence": {
            "type": "object",
            "properties": {
              "source": {
                "type": "object",
                "properties": {
                  "ptr": {"type": "string"},
                  "line": {"type": ["integer", "null"]},
                  "excerpt_hash": {"type": "string"}
                }
              },
              "reason": {"type": "string"}
            }
          },
          "inferred_from_prose": {"type": "boolean"},
          "intent_category": {"type": "string"},
          "blocked_by": {"type": ["array", "null"], "items": {"type": "string"}},
          "status": {"type": "string"}
        },
        "additionalProperties": true
      }
    },
    "status": {"type": ["string", "null"]}
  },
  "additionalProperties": false
}
